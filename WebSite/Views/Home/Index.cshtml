@model IEnumerable<WebSite.Models.Teacher>
@{
    ViewBag.Title = "Монография преподователей";
}
 
<h2>Монография преподователей</h2>
<p>
    @Html.ActionLink("Добавить преподователя", "Create")
</p>
<table>
    <tr>
        <th>Имя преподователя</th>
        <th>Должность</th>
        <th>Учёная степень</th>
        <th>Ученое звание</th>
        <th>Стаж работы</th>
        <th>Публикация</th>
        <th> <a asp-action="Index" asp-route-sortOrder="@ViewBag.PublishSort">
                Издания
            </a></th>
        <th></th>
    </tr>
 
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Post)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Degree)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Exp)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Monograph.Name)
            </td>
             <td>
                @Html.DisplayFor(modelItem => item.Monograph.Publish)
            </td>
            <td>
                @Html.ActionLink("Редактировать", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Удалить", "Delete", new { id = item.Id })
            </td>
        </tr>
    }
</table>
<p>
    @Html.ActionLink("Каталог издательств", "ListTeams")
</p>